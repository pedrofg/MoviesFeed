<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.moviesfeed.activities.AboutActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarAboutActivity"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/iconWhite"
        android:layout_below="@id/toolbarAboutActivity"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtUsedApis"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/used_apis" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:src="@drawable/tmdb_logo" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
