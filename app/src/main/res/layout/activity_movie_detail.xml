<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="true">

    <ProgressBar
        android:id="@+id/progressLoadingMovies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true" />


    <LinearLayout
        android:id="@+id/layoutDetailsError"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_sad" />

        <com.moviesfeed.activities.uicomponents.CustomTextView
            android:id="@+id/txtMovieDetailError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            app:typeface="Roboto-Light.ttf" />

    </LinearLayout>


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:visibility="gone">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsingToolBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:titleEnabled="false">


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerViewMovieImages"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                app:layout_collapseMode="parallax" />


            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbarMovieDetail"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                app:layout_collapseMode="pin" />


        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.moviesfeed.activities.uicomponents.CustomTextView
                    android:id="@+id/txtMovieTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@android:color/black"
                    android:textSize="26dp"
                    app:typeface="Roboto-Regular.ttf" />

                <RelativeLayout
                    android:id="@+id/layoutSubContent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/txtMovieTitle"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp">

                    <RelativeLayout
                        android:id="@+id/layoutRatingAndGenres"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="5dp">

                        <LinearLayout
                            android:id="@+id/layoutMovieRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_border_background"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:visibility="gone">

                            <com.moviesfeed.activities.uicomponents.CustomTextView
                                android:id="@+id/txtMovieRating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/black"
                                android:textSize="18dp"
                                app:typeface="Roboto-Light.ttf" />

                            <RatingBar
                                android:id="@+id/rbMovieRating"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:isIndicator="true"
                                android:numStars="5"
                                android:stepSize="0.01" />

                        </LinearLayout>

                        <com.moviesfeed.activities.uicomponents.CustomTextView
                            android:id="@+id/txtMovieGenres"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@id/layoutMovieRating"
                            android:layout_alignRight="@id/layoutMovieRating"
                            android:layout_below="@id/layoutMovieRating"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/rounded_border_background"
                            android:gravity="center"
                            android:padding="10dp"
                            android:textColor="@android:color/black"
                            android:textSize="14dp"
                            android:visibility="gone"
                            app:typeface="Roboto-Light.ttf" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/layoutMovieYear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@id/layoutRatingAndGenres"
                        android:orientation="horizontal">

                        <com.moviesfeed.activities.uicomponents.CustomTextView
                            android:id="@+id/txtMovieYear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="18dp"
                            android:visibility="gone"
                            app:typeface="Roboto-Light.ttf" />

                        <com.moviesfeed.activities.uicomponents.CustomTextView
                            android:id="@+id/txtMovieRuntime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@id/txtMovieYear"
                            android:layout_below="@id/txtMovieTitle"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@id/txtMovieYear"
                            android:textColor="@android:color/black"
                            android:textSize="18dp"
                            android:visibility="gone"
                            app:typeface="Roboto-Light.ttf" />
                    </LinearLayout>


                    <com.moviesfeed.activities.uicomponents.CustomTextView
                        android:id="@+id/txtMovieOverview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/layoutMovieYear"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@id/layoutRatingAndGenres"
                        android:textColor="@android:color/black"
                        android:textSize="18dp"
                        app:typeface="Roboto-Light.ttf" />

                    <com.moviesfeed.activities.uicomponents.CustomTextView
                        android:id="@+id/txtMovieHomepage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/txtMovieOverview"
                        android:layout_toLeftOf="@id/layoutRatingAndGenres"
                        android:autoLink="web"
                        android:textColor="@android:color/black"
                        android:textColorLink="@color/colorPrimary"
                        android:visibility="gone"
                        app:typeface="Roboto-Light.ttf" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layoutVideos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layoutSubContent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:visibility="gone">

                    <com.moviesfeed.activities.uicomponents.CustomTextView
                        android:id="@+id/txtVideos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/videos"
                        android:textColor="@android:color/black"
                        android:textSize="20dp"
                        app:typeface="Roboto-Regular.ttf" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerViewMovieVideos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtVideos"
                        android:layout_marginTop="20dp"
                        android:background="@android:color/white" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/layoutCast"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/layout_cast_height"
                    android:layout_below="@id/layoutVideos"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:visibility="gone">

                    <com.moviesfeed.activities.uicomponents.CustomTextView
                        android:id="@+id/txtCast"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cast"
                        android:textColor="@android:color/black"
                        android:textSize="20dp"
                        app:typeface="Roboto-Regular.ttf" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerViewMovieCast"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtCast"
                        android:layout_marginTop="20dp"
                        android:background="@android:color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layoutCrew"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/layout_cast_height"
                    android:layout_below="@id/layoutCast"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:visibility="gone">

                    <com.moviesfeed.activities.uicomponents.CustomTextView
                        android:id="@+id/txtCrew"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/crew"
                        android:textColor="@android:color/black"
                        android:textSize="20dp"
                        app:typeface="Roboto-Regular.ttf" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerViewMovieCrew"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtCrew"
                        android:layout_marginTop="20dp"
                        android:background="@android:color/white" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>